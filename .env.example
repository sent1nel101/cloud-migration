# ===== AI Model API Keys =====
# Option 1: Claude (Anthropic) - REQUIRED
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Option 2: OpenAI (not currently used)
OPENAI_API_KEY=your_openai_api_key_here

# ===== Database Configuration (Phase 2) =====
# PostgreSQL database URL for user accounts, roadmaps, and payments
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://user:password@localhost:5432/cloud_designs

# ===== Authentication Configuration =====
# Secret key for NextAuth.js JWT signing
# Generate: openssl rand -base64 32
NEXTAUTH_SECRET=your_random_secret_here_use_openssl_to_generate

# Application URL (used for redirects)
NEXTAUTH_URL=http://localhost:3000

# ===== Payment Integration (Phase 2) =====
# Stripe API keys for payment processing
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===== Email Configuration (Phase 3) =====
# Optional: SendGrid for transactional emails
SENDGRID_API_KEY=your_sendgrid_api_key_here

# ===== Application Settings =====
NODE_ENV=development
